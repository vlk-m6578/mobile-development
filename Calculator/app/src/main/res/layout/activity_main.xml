<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Ð’ÐµÑ€Ñ…Ð½ÑÑ Ð¿Ð°Ð½ÐµÐ»ÑŒ Ñ ÐšÐÐžÐŸÐšÐÐœÐ˜ -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:gravity="center">

        <!-- ÐšÐ½Ð¾Ð¿ÐºÐ° ÑÐ²ÐµÑ‚Ð»Ð¾Ð¹ Ñ‚ÐµÐ¼Ñ‹ -->
        <Button
            android:id="@+id/button_light_theme"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:text="ðŸŒž"
            android:textSize="20sp"
            android:backgroundTint="#6200EE"
            android:textColor="#FFFFFF"/>

        <!-- ÐšÐ½Ð¾Ð¿ÐºÐ° Ñ‚ÐµÐ¼Ð½Ð¾Ð¹ Ñ‚ÐµÐ¼Ñ‹ -->
        <Button
            android:id="@+id/button_dark_theme"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:text="ðŸŒ™"
            android:textSize="20sp"
            android:backgroundTint="#6200EE"
            android:textColor="#FFFFFF"/>

        <!-- ÐšÐ½Ð¾Ð¿ÐºÐ° Ð²Ð¸Ð±Ñ€Ð°Ñ†Ð¸Ð¸ -->
        <Button
            android:id="@+id/button_vibration"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:text="ðŸ“³"
            android:textSize="20sp"
            android:backgroundTint="#6200EE"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

    <!-- Ð”Ð¸ÑÐ¿Ð»ÐµÐ¹ -->
    <TextView
        android:id="@+id/displayTextView"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="16dp"
        android:background="@android:drawable/editbox_background"
        android:gravity="end|center_vertical"
        android:padding="16dp"
        android:text="0"
        android:textSize="32sp"
        android:textColor="#212121"
        android:textStyle="bold"
        android:elevation="4dp"
        android:singleLine="true"/>

    <!-- ÐšÐ°Ð»ÑŒÐºÑƒÐ»ÑÑ‚Ð¾Ñ€ -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:columnCount="4"
        android:rowCount="5"
        android:alignmentMode="alignMargins"
        android:useDefaultMargins="true">

        <!-- 7 8 9 / -->
        <Button
            android:id="@+id/button_7"
            android:layout_column="0"
            android:layout_row="0"
            android:text="7"
            android:textSize="24sp"
            android:backgroundTint="#FFFFFF"
            android:textColor="#333333"
            android:minHeight="70dp"/>
        <Button
            android:id="@+id/button_8"
            android:layout_column="1"
            android:layout_row="0"
            android:text="8"
            android:textSize="24sp"
            android:backgroundTint="#FFFFFF"
            android:textColor="#333333"
            android:minHeight="70dp"/>
        <Button
            android:id="@+id/button_9"
            android:layout_column="2"
            android:layout_row="0"
            android:text="9"
            android:textSize="24sp"
            android:backgroundTint="#FFFFFF"
            android:textColor="#333333"
            android:minHeight="70dp"/>
        <Button
            android:id="@+id/button_divide"
            android:layout_column="3"
            android:layout_row="0"
            android:text="/"
            android:textSize="24sp"
            android:backgroundTint="#FF9800"
            android:textColor="#FFFFFF"
            android:minHeight="70dp"/>

        <!-- 4 5 6 * -->
        <Button
            android:id="@+id/button_4"
            android:layout_column="0"
            android:layout_row="1"
            android:text="4"
            android:textSize="24sp"
            android:backgroundTint="#FFFFFF"
            android:textColor="#333333"
            android:minHeight="70dp"/>
        <Button
            android:id="@+id/button_5"
            android:layout_column="1"
            android:layout_row="1"
            android:text="5"
            android:textSize="24sp"
            android:backgroundTint="#FFFFFF"
            android:textColor="#333333"
            android:minHeight="70dp"/>
        <Button
            android:id="@+id/button_6"
            android:layout_column="2"
            android:layout_row="1"
            android:text="6"
            android:textSize="24sp"
            android:backgroundTint="#FFFFFF"
            android:textColor="#333333"
            android:minHeight="70dp"/>
        <Button
            android:id="@+id/button_multiply"
            android:layout_column="3"
            android:layout_row="1"
            android:text="*"
            android:textSize="24sp"
            android:backgroundTint="#FF9800"
            android:textColor="#FFFFFF"
            android:minHeight="70dp"/>

        <!-- 1 2 3 - -->
        <Button
            android:id="@+id/button_1"
            android:layout_column="0"
            android:layout_row="2"
            android:text="1"
            android:textSize="24sp"
            android:backgroundTint="#FFFFFF"
            android:textColor="#333333"
            android:minHeight="70dp"/>
        <Button
            android:id="@+id/button_2"
            android:layout_column="1"
            android:layout_row="2"
            android:text="2"
            android:textSize="24sp"
            android:backgroundTint="#FFFFFF"
            android:textColor="#333333"
            android:minHeight="70dp"/>
        <Button
            android:id="@+id/button_3"
            android:layout_column="2"
            android:layout_row="2"
            android:text="3"
            android:textSize="24sp"
            android:backgroundTint="#FFFFFF"
            android:textColor="#333333"
            android:minHeight="70dp"/>
        <Button
            android:id="@+id/button_subtract"
            android:layout_column="3"
            android:layout_row="2"
            android:text="-"
            android:textSize="24sp"
            android:backgroundTint="#FF9800"
            android:textColor="#FFFFFF"
            android:minHeight="70dp"/>

        <!-- 0 . = + -->
        <Button
            android:id="@+id/button_0"
            android:layout_column="0"
            android:layout_row="3"
            android:text="0"
            android:textSize="24sp"
            android:backgroundTint="#FFFFFF"
            android:textColor="#333333"
            android:minHeight="70dp"/>
        <Button
            android:id="@+id/button_decimal"
            android:layout_column="1"
            android:layout_row="3"
            android:text="."
            android:textSize="24sp"
            android:backgroundTint="#FFFFFF"
            android:textColor="#333333"
            android:minHeight="70dp"/>
        <Button
            android:id="@+id/button_equals"
            android:layout_column="2"
            android:layout_row="3"
            android:text="="
            android:textSize="24sp"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:minHeight="70dp"/>
        <Button
            android:id="@+id/button_add"
            android:layout_column="3"
            android:layout_row="3"
            android:text="+"
            android:textSize="24sp"
            android:backgroundTint="#FF9800"
            android:textColor="#FFFFFF"
            android:minHeight="70dp"/>

        <!-- CLEAR -->
        <Button
            android:id="@+id/button_clear"
            android:layout_column="0"
            android:layout_columnSpan="4"
            android:layout_row="4"
            android:text="CLEAR"
            android:textSize="24sp"
            android:backgroundTint="#F44336"
            android:textColor="#FFFFFF"
            android:minHeight="70dp"/>
    </GridLayout>
</LinearLayout>